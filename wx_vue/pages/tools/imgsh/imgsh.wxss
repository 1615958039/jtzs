.titles{
  margin-top: 10px;
  width: 90%;
  margin-left: 5%;
}


.head{
  font-size: 14px;
  background-color: #1989fa;
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: row;
  box-shadow:0px 0px 5px rgb(189, 186, 186);
}
.head_img{
  margin: 10px 10px 10px 20px;
  height: 40px;
  width: 40px;
  border-radius: 50%;
  border-style:solid;
  border-width:1px;
  border-color:#dbdee4;
}
.head_view{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: auto;
  color: #fff;
}
.head_view_name{
  font-size: 13px;
  height: 28px;
  display: flex;
  flex-direction: column-reverse;
}
.head_view_info{
  margin-top: 4px;
  font-size: 11px;
  height: 28px;
  display: flex;
  flex-direction: column;
  white-space:nowrap;
}
.head_like{
  right: 20px;
  position:absolute;
  line-height: 60px;
}
.head_like_icon{
  box-shadow:0px 0px 5px rgb(252, 5, 5);
}
.head_num{
  right: 0;
  width: 63px;
  text-align: center;
  position:absolute;
  line-height: 90px;
  color: #fff;
  font-size: 11px;
}
.head_like_click{
  z-index: 200;
  right: 20px;
  position:absolute;
  display: flex;
  align-items: center;
}
.head_like_click_view{
  height: 23px;
  width: 23px;
}


.img{
  margin-top: 5%;
  height: 650rpx;
  width: 90%;
  margin-left: 5%;
  box-shadow:0px 0px 5px rgb(207, 202, 202);
  border-radius: 10px;
}
.img_src{
  border-radius: 10px;
  height: 100%;
  width: 100%;
}


.buttons{
  margin-top: 5%;
  width: 98%;
  margin-left: 1%;
  margin-right: 1%;
}
.button{
  border-radius: 5px;
  width: 100%;
}